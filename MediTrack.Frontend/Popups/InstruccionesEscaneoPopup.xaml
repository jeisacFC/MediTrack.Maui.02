<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MediTrack.Frontend.Popups.InstruccionesEscaneoPopup"
               Color="Transparent">

    <Frame CornerRadius="10" Padding="10" Margin="30" BackgroundColor="White"
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           WidthRequest="280">

        <VerticalStackLayout Spacing="10">
            <Image Source="barcode_scan_icon.png" 
                   HeightRequest="180"
                   WidthRequest="150"
                   HorizontalOptions="Center"/>

            <Button Text="Entendido"
                    FontAttributes="Bold"
                    Clicked="Entendido_Clicked"
                    Padding="15, 10"
                    Margin="15, 5"
                    BackgroundColor="#FF8C3B"/>

        </VerticalStackLayout>

    </Frame>
</toolkit:Popup>