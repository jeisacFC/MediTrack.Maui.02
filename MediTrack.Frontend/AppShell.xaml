<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MediTrack.Frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pantallasInicio="clr-namespace:MediTrack.Frontend.Vistas.PantallasInicio"
    xmlns:pantallasPrincipales="clr-namespace:MediTrack.Frontend.Vistas.PantallasPrincipales"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="MediTrack">
    
    <!-- Rutas de PantallasInicio -->
 
    <ShellContent Route="pantallaCarga"
                  ContentTemplate="{DataTemplate pantallasInicio:PantallaCarga}" />

    <ShellContent Route="bienvenida"
                  ContentTemplate="{DataTemplate pantallasInicio:PantallaBienvenida}" />

    <ShellContent Route="inicioSesion"
                  ContentTemplate="{DataTemplate pantallasInicio:PantallaInicioSesion}" />

    <ShellContent Route="registro"
                  ContentTemplate="{DataTemplate pantallasInicio:PantallaRegistro}" />


    <!-- Rutas de Pantalla Principales -->
    <ShellContent Route="principal"
                  ContentTemplate="{DataTemplate pantallasPrincipales:PantallaPrincipal}" />

</Shell>