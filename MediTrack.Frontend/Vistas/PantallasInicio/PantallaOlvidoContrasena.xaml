<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MediTrack.Frontend.ViewModels.PantallasInicio"
    xmlns:base="clr-namespace:MediTrack.Frontend.Vistas"
    x:Class="MediTrack.Frontend.Vistas.PantallasInicio.PantallaOlvidoContrasena"
    NavigationPage.HasNavigationBar="False">

    <Grid>

        <!-- Patrón de fondo (mismo que otras pantallas) -->
        <Image Source="logo_patron.png"
           Aspect="AspectFill"
           Opacity="0.7"
           HorizontalOptions="Fill"
           VerticalOptions="Fill"
           ZIndex="0"/>

        <!-- Distribución en dos filas -->
        <Grid RowDefinitions="*,3*"
          ZIndex="1">

            <!-- Fila superior vacía (solo el patrón) -->
            <Grid Grid.Row="0"/>

            <!-- Fila inferior: contenedor blanco -->
            <Frame Grid.Row="1"
             CornerRadius="40"
             BackgroundColor="White"
             HasShadow="True"
             Padding="35"
             VerticalOptions="Fill"
             HeightRequest="700">

                <ScrollView>
                    <VerticalStackLayout Spacing="25">

                        <!-- Título en azul corporativo -->
                        <Label Text="Recuperar contraseña"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#3B71FF"
                   HorizontalOptions="Center"/>

                        <Label Text="Ingresa tu correo y te enviaremos un código para restablecer la contraseña."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>

                        <!-- Mensaje de estado -->
                        <Label Text="{Binding MensajeEstado}"
                               TextColor="#3B71FF"
                               FontSize="14"
                               HorizontalOptions="Center"
                               IsVisible="{Binding MensajeEstado, Converter={StaticResource StringNotEmptyConverter}}"/>

                        <!-- Entrada de correo con icono -->
                        <Frame CornerRadius="12"
                   BackgroundColor="#F8F8F8"
                   HasShadow="False"
                   Padding="10">
                            <HorizontalStackLayout Spacing="10">
                                <Image>
                                    <Image.Source>
                                        <FontImageSource Glyph="&#xE0BE;"
                                     FontFamily="MaterialIcons"
                                     Color="#3B71FF"
                                     Size="20"/>
                                    </Image.Source>
                                </Image>
                                <Entry x:Name="entryCorreo"
                                       Text="{Binding Email}"
                                       Placeholder="correo@ejemplo.com"
                                       Keyboard="Email"
                                       PlaceholderColor="#A0A0A0"
                                       TextColor="Black"
                                       HeightRequest="45"
                                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Botón principal en azul -->
                        <Button Text="Enviar código"
                                Command="{Binding EnviarCodigoCommand}"
                                BackgroundColor="#3B71FF"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="18"
                                CornerRadius="12"
                                HeightRequest="50"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                Clicked="EnviarEnlace">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Text" Value="Enviando..." />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Volver a inicio de sesión -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Text="¿Recordaste tu contraseña?"
                     TextColor="Gray"
                     VerticalOptions="Center"
                     Grid.Column="0"/>

                            <Button Text="Iniciar sesión"
                                    Command="{Binding VolverInicioSesionCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="#3B71FF"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    Grid.Column="1"
                                    Clicked="VolverInicioSesion"/>
                        </Grid>

                    </VerticalStackLayout>
                </ScrollView>

            </Frame>
        </Grid>
    </Grid>
</base:BaseContentPage>