<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MediTrack.Frontend.ViewModels.PantallasPrincipales"
             xmlns:vistas="clr-namespace:MediTrack.Frontend.Vistas"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaBusqueda"
             Title="Búsqueda de medicamentos"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="25">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Buscar Medicamento"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           Margin="0,5,0,5" />

                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,3">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   FontFamily="MaterialIcons"
                                   Text="&#xe02f;"
                                   FontSize="20"
                                   TextColor="DodgerBlue"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Placeholder="Nombre del medicamento"
                                   Text="{Binding TerminoBusqueda.NombreMedicamento}"
                                   BackgroundColor="Transparent"
                                   FontSize="15"
                                   HorizontalOptions="Fill" />
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,3">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   FontFamily="MaterialIcons"
                                   Text="&#xe02f;"
                                   FontSize="20"
                                   TextColor="DodgerBlue"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Placeholder="Dosis del medicamento"
                                   Text="{Binding TerminoBusqueda.Dosis}"
                                   BackgroundColor="Transparent"
                                   FontSize="15"
                                   HorizontalOptions="Fill" />
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,3">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   FontFamily="MaterialIcons"
                                   Text="&#xe87d;"
                                   FontSize="20"
                                   TextColor="DodgerBlue"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="1"
                                   Placeholder="Principio Activo"
                                   Text="{Binding TerminoBusqueda.PrincipioActivo}"
                                   BackgroundColor="Transparent"
                                   FontSize="15"
                                   HorizontalOptions="Fill" />
                        </Grid>
                    </Frame>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,15,0,0">
                        <Button Grid.Column="0"
                                Text="Buscar"
                                Command="{Binding BuscarCommand}"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="10"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Padding="10">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" 
                                                 Glyph="&#xe8b6;" 
                                                 Color="White" 
                                                 Size="20"/>
                            </Button.ImageSource>
                        </Button>

                        <Button Grid.Column="1"
                                Text="Limpiar"
                                Command="{Binding LimpiarCommand}"
                                BackgroundColor="#F8F9FA"
                                TextColor="#FF9500"
                                CornerRadius="10"
                                FontSize="16"
                                HeightRequest="50"
                                Padding="10"
                                BorderColor="#FF9500"
                                BorderWidth="1">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" 
                                                 Glyph="&#xe5cd;" 
                                                 Color="#007AFF" 
                                                 Size="18"/>
                            </Button.ImageSource>
                        </Button>
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="¿Cómo buscar?"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           Margin="0,15,0,5" />

                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,3">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   FontFamily="MaterialIcons"
                                   Text="&#xe88e;"
                                   FontSize="20"
                                   TextColor="#FF9500"
                                   VerticalOptions="Start" />
                            <Label Grid.Column="1"
                                   Text="Puedes buscar por cualquiera de los campos o combinarlos para resultados más específicos"
                                   FontSize="14"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Start" />
                        </Grid>
                    </Frame>

                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,3">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   FontFamily="MaterialIcons"
                                   Text="&#xe8fd;"
                                   FontSize="20"
                                   TextColor="#007AFF"
                                   VerticalOptions="Start" />
                            <Label Grid.Column="1"
                                   Text="Ejemplos: 'Paracetamol', '500mg', 'Acetaminofén'"
                                   FontSize="14"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Start" />
                        </Grid>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <vistas:BotonFlotanteEscaner />
    </Grid>
</ContentPage>