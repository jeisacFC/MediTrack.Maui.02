<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaPerfil"
    xmlns:base="clr-namespace:MediTrack.Frontend.Vistas.Base"
    BackgroundColor="#e6f0ff"
    Title="Perfil">

    <Grid>
        <!-- Fondo con patrón solo arriba -->
        <Grid HeightRequest="200" VerticalOptions="Start">
            <BoxView Color="#3b71ff" Opacity="0.9" HorizontalOptions="Fill" VerticalOptions="Fill" />
            <Image Source="logo_patron.png" Aspect="AspectFill" Opacity="0.15" HorizontalOptions="Fill" VerticalOptions="Fill" />

        </Grid>

        <ScrollView Margin="0,100,0,0">
            <Frame CornerRadius="40" 
                   Margin="0" 
                   Padding="25,80,25,25" 
                   BackgroundColor="White" 
                   HasShadow="False">
                <VerticalStackLayout Spacing="25">

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsVisible="{Binding IsBusy}"
                                     IsRunning="{Binding IsBusy}"
                                     Color="#007AFF"
                                     HeightRequest="40" />

                    <!-- Información Personal -->
                    <VerticalStackLayout Spacing="10" 
                                       Margin="0,40,0,0"
                                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
                        <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                            <Label Grid.Column="0"
                                   Text="Información Personal"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   VerticalTextAlignment="Center" />
                            <Button Grid.Column="1"
                                    Text="Editar"
                                    BackgroundColor="#007AFF"
                                    TextColor="White"
                                    CornerRadius="10"
                                    FontSize="12"
                                    Padding="10,6"
                                    WidthRequest="70"
                                    HeightRequest="28"
                                    Command="{Binding EditarPerfilCommand}" />
                        </Grid>

                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="True">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                  ColumnDefinitions="120,*" 
                                  RowSpacing="12" 
                                  ColumnSpacing="15">

                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="Nombre:" 
                                       FontSize="14" 
                                       FontAttributes="Bold" 
                                       TextColor="Gray" />
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding NombreCompleto}" 
                                       FontSize="14" 
                                       TextColor="Black" />

                                <Label Grid.Row="1" Grid.Column="0" 
                                       Text="Email:" 
                                       FontSize="14" 
                                       FontAttributes="Bold" 
                                       TextColor="Gray" />
                                <Label Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Usuario.email}" 
                                       FontSize="14" 
                                       TextColor="Black" />

                                <Label Grid.Row="2" Grid.Column="0" 
                                       Text="Nacimiento:" 
                                       FontSize="14" 
                                       FontAttributes="Bold" 
                                       TextColor="Gray" />
                                <Label Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding FechaNacimientoFormateada}" 
                                       FontSize="14" 
                                       TextColor="Black" />

                                <Label Grid.Row="3" Grid.Column="0" 
                                       Text="Género:" 
                                       FontSize="14" 
                                       FontAttributes="Bold" 
                                       TextColor="Gray" />
                                <Label Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding GeneroTexto}" 
                                       FontSize="14" 
                                       TextColor="Black" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Estado de Cuenta -->
                    <VerticalStackLayout Spacing="10" 
                                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
                        <Label Text="Estado de Cuenta"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,5,0,5" />

                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="True">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="&#xe86c;"
                                       FontFamily="MaterialIcons"
                                       FontSize="20"
                                       TextColor="#28a745"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding EstadoCuenta}"
                                       FontSize="14"
                                       TextColor="Black"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Condiciones Médicas -->
                    <VerticalStackLayout Spacing="10" 
                                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
                        <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                            <Label Grid.Column="0"
                                   Text="Condiciones Médicas"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   VerticalTextAlignment="Center" />
                            <Button Grid.Column="1"
                                    Text="Gestionar"
                                    BackgroundColor="#FF6B6B"
                                    TextColor="White"
                                    CornerRadius="10"
                                    FontSize="11"
                                    Padding="8,5"
                                    WidthRequest="80"
                                    HeightRequest="26"
                                    Command="{Binding GestionarCondicionesMedicasCommand}" />
                        </Grid>

                        <!-- Lista de condiciones como chips -->
                        <ScrollView Orientation="Horizontal"
                                    HorizontalScrollBarVisibility="Never"
                                    IsVisible="{Binding CondicionesMedicas.Count, Converter={StaticResource IntToBoolConverter}}">
                            <StackLayout Orientation="Horizontal" 
                                         Spacing="8" 
                                         Padding="0,5"
                                         BindableLayout.ItemsSource="{Binding CondicionesMedicas}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#FFE8E8"
                                               CornerRadius="20"
                                               Padding="12,8"
                                               HasShadow="False"
                                               HeightRequest="36">
                                            <Label Text="{Binding nombre_condicion}"
                                                   TextColor="#C53030"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center" />
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </ScrollView>

                        <!-- Mensaje cuando no hay condiciones -->
                        <Frame BackgroundColor="#F8F9FA" 
                               CornerRadius="15" 
                               Padding="20"
                               HasShadow="False"
                               IsVisible="{Binding CondicionesMedicas.Count, Converter={StaticResource IntToInverseBoolConverter}}">
                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Label Text="&#xe8f4;"
                                       FontFamily="MaterialIcons"
                                       FontSize="30"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay condiciones médicas registradas"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Alergias -->
                    <VerticalStackLayout Spacing="10" 
                                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
                        <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                            <Label Grid.Column="0"
                                   Text="Alergias"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   VerticalTextAlignment="Center" />
                            <Button Grid.Column="1"
                                    Text="Gestionar"
                                    BackgroundColor="#FFA500"
                                    TextColor="White"
                                    CornerRadius="10"
                                    FontSize="11"
                                    Padding="8,5"
                                    WidthRequest="80"
                                    HeightRequest="26"
                                    Command="{Binding GestionarAlergiasCommand}" />
                        </Grid>

                        <!-- Lista de alergias como chips -->
                        <ScrollView Orientation="Horizontal"
                                    HorizontalScrollBarVisibility="Never"
                                    IsVisible="{Binding Alergias.Count, Converter={StaticResource IntToBoolConverter}}">
                            <StackLayout Orientation="Horizontal" 
                                         Spacing="8" 
                                         Padding="0,5"
                                         BindableLayout.ItemsSource="{Binding Alergias}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#FFF3CD"
                                               CornerRadius="20"
                                               Padding="12,8"
                                               HasShadow="False"
                                               HeightRequest="36">
                                            <Label Text="{Binding nombre_alergia}"
                                                   TextColor="#856404"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center" />
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </ScrollView>

                        <!-- Mensaje cuando no hay alergias -->
                        <Frame BackgroundColor="#F8F9FA" 
                               CornerRadius="15" 
                               Padding="20"
                               HasShadow="False"
                               IsVisible="{Binding Alergias.Count, Converter={StaticResource IntToInverseBoolConverter}}">
                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Label Text="&#xe8f4;"
                                       FontFamily="MaterialIcons"
                                       FontSize="30"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay alergias registradas"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Configuración -->
                    <VerticalStackLayout Spacing="10" 
                                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
                        <Label Text="Configuración"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,5,0,5" />

                        <!-- Notificaciones -->
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="True">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <Label Grid.Column="0"
                                       Text="&#xe7f4;"
                                       FontFamily="MaterialIcons"
                                       FontSize="20"
                                       TextColor="#007AFF"
                                       VerticalOptions="Center" />
                                <Label Grid.Column="1"
                                       Text="Notificaciones Push"
                                       FontSize="14"
                                       TextColor="Black"
                                       VerticalOptions="Center" />
                                <Switch Grid.Column="2"
                                        IsToggled="{Binding Usuario.notificaciones_push}"
                                        OnColor="#007AFF"
                                        Toggled="OnNotificacionesToggled" />
                            </Grid>
                        </Frame>

                        <!-- Cerrar Sesión -->
                        <Frame BackgroundColor="White"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="True">
                            <Button Text="Cerrar Sesión"
                                    BackgroundColor="#dc3545"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    Command="{Binding CerrarSesionCommand}" />
                        </Frame>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- Avatar flotante -->
        <Grid HorizontalOptions="Center" VerticalOptions="Start" Margin="0,50,0,0">
            <Frame BackgroundColor="White" 
                   CornerRadius="60" 
                   HeightRequest="120" 
                   WidthRequest="120" 
                   Padding="15" 
                   HasShadow="True">
                <Label Text="&#xe853;"
                       FontFamily="MaterialIcons"
                       FontSize="90"
                       TextColor="#007AFF"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Frame>

            <!-- Nombre debajo del avatar -->
            <Label Text="{Binding NombreCompleto}" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   TextColor="Black" 
                   HorizontalTextAlignment="Center"
                   VerticalOptions="End"
                   Margin="0,0,0,-35"
                   BackgroundColor="White"
                   Padding="10,5" />
        </Grid>

    </Grid>
</base:BaseContentPage>