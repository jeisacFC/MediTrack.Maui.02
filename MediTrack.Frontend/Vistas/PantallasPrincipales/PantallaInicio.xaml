<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:MediTrack.Frontend.Vistas.Base"
             xmlns:vm="clr-namespace:MediTrack.Frontend.ViewModels.PantallasPrincipales"
             xmlns:vistas="clr-namespace:MediTrack.Frontend.Vistas"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaInicio"
             x:Name="Pagina"
             BackgroundColor="White"
             Title="Inicio">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="25">
                <!-- Loading Indicator -->
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          Color="#007AFF"
                          HeightRequest="40" />

                <!-- 1. MEDICAMENTOS PARA HOY -->
                <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                        <Label Grid.Column="0"
                        Text="{Binding FechaHoy, StringFormat='Medicamentos - {0}'}"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="Black"
                        VerticalTextAlignment="Center" />
                        <Button Grid.Column="1"
                         Text="Ver todo"
                         BackgroundColor="#007AFF"
                         TextColor="White"
                         CornerRadius="10"
                         FontSize="12"
                         Padding="10,6"
                         WidthRequest="70"
                         HeightRequest="28"
                         Command="{Binding IrAAgendaCommand}"
                         IsVisible="{Binding HayMedicamentos}" />
                    </Grid>

                    <CollectionView ItemsSource="{Binding MedicamentosHoy}"
                            IsVisible="{Binding HayMedicamentos}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White"
                                CornerRadius="10"
                                Padding="0"
                                Margin="0,3"
                                HasShadow="True"
                                HeightRequest="75">
                                    <Grid ColumnDefinitions="4,*,Auto" 
                                   Padding="0"
                                   HeightRequest="75">
                                        <BoxView Grid.Column="0"
                                          BackgroundColor="{Binding Color}" />
                                        <VerticalStackLayout Grid.Column="1" 
                                                    Padding="12"
                                                    Spacing="3"
                                                    VerticalOptions="Center">
                                            <Label Text="{Binding Titulo}"
                                            FontSize="15"
                                            FontAttributes="Bold"
                                            TextColor="Black"
                                            LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding Descripcion}"
                                            FontSize="13"
                                            TextColor="Gray"
                                            LineBreakMode="TailTruncation"
                                            IsVisible="{Binding Descripcion, Converter={StaticResource StringNotEmptyConverter}}" />
                                            <Label Text="{Binding HoraFormateada, StringFormat='游뎷 {0}'}"
                                            FontSize="12"
                                            TextColor="#007AFF" />
                                        </VerticalStackLayout>
                                        <Button Grid.Column="2"
                                         Text="{Binding Completado, Converter={StaticResource BoolToCheckConverter}}"
                                         BackgroundColor="{Binding Completado, Converter={StaticResource BoolToColorConverter}}"
                                         TextColor="White"
                                         CornerRadius="12"
                                         FontSize="11"
                                         Padding="8,4"
                                         Margin="10"
                                         WidthRequest="65"
                                         HeightRequest="28"
                                         VerticalOptions="Center"
                                         Command="{Binding BindingContext.MarcarTomadoCommand, Source={x:Reference Pagina}}"
                                         CommandParameter="{Binding .}" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Frame BackgroundColor="#F8F9FA" 
                    CornerRadius="15" 
                    Padding="20"
                    HasShadow="False"
                    IsVisible="{Binding HayMedicamentos, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                            Text="&#xe1a3;"
                            FontSize="30"
                            TextColor="#cccccc"
                            HorizontalTextAlignment="Center" />
                            <Label Text="No hay medicamentos para hoy"
                            TextColor="Gray"
                            FontSize="14"
                            HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 2. S칈NTOMAS RECIENTES (SEGUNDO LUGAR) -->
                <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                        <Label Grid.Column="0"
                               Text="S칤ntomas recientes"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalTextAlignment="Center" />

                        <Button Grid.Column="1"
                                Text="{Binding HaySintomas, Converter={StaticResource BoolToGestionarTextConverter}}"
                                BackgroundColor="#9C27B0"
                                TextColor="White"
                                CornerRadius="10"
                                FontSize="11"
                                Padding="8,5"
                                WidthRequest="{Binding HaySintomas, Converter={StaticResource BoolToButtonWidthConverter}}"
                                HeightRequest="26"
                                Command="{Binding GestionarSintomasCommand}" />
                    </Grid>

                    <!-- Lista de s칤ntomas en chips -->
                    <ScrollView Orientation="Horizontal"
                                HorizontalScrollBarVisibility="Never"
                                IsVisible="{Binding HaySintomas}">
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="8" 
                                     Padding="0,5"
                                     BindableLayout.ItemsSource="{Binding SintomasUsuario}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#E8E4FF"
                                           CornerRadius="20"
                                           Padding="12,8"
                                           HasShadow="False"
                                           HeightRequest="36">
                                        <Label Text="{Binding Nombre}"
                                               TextColor="#6B46C1"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center" />
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                    <!-- Mensaje cuando no hay s칤ntomas -->
                    <Frame BackgroundColor="#F8F9FA" 
                           CornerRadius="15" 
                           Padding="20"
                           HasShadow="False"
                           IsVisible="{Binding HaySintomas, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                                   Text="&#xe87c;"
                                   FontSize="30"
                                   TextColor="#cccccc"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="No hay s칤ntomas reportados"
                                   TextColor="Gray"
                                   FontSize="14"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Toca en '쮺칩mo te sientes?' para agregar s칤ntomas"
                                   TextColor="Gray"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   Opacity="0.7" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 3. ESCANEOS RECIENTES -->
                <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                        <Label Grid.Column="0"
                        Text="Escaneos Recientes"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="Black"
                        VerticalTextAlignment="Center" />
                        <Button Grid.Column="1"
                         Text="Ver todos"
                         BackgroundColor="#4CAF50"
                         TextColor="White"
                         CornerRadius="10"
                         FontSize="11"
                         Padding="8,5"
                         WidthRequest="70"
                         HeightRequest="26"
                         Command="{Binding VerTodosEscaneosCommand}"
                         IsVisible="{Binding HayEscaneos}" />
                    </Grid>

                    <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        HeightRequest="120"
                        IsVisible="{Binding HayEscaneos}">
                        <StackLayout Orientation="Horizontal" Spacing="10" Padding="0,5">
                            <Frame BackgroundColor="#E8F5E8"
                            CornerRadius="15"
                            Padding="12"
                            WidthRequest="200"
                            HasShadow="True">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Divalproato S칩dico 250mg"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="TailTruncation" />
                                    <Label Text="5 de Abril, 7:23 p. m."
                                    FontSize="12"
                                    TextColor="Gray" />
                                    <Label Text="Laboratorio ABC"
                                    FontSize="11"
                                    TextColor="#666"
                                    LineBreakMode="TailTruncation" />
                                </VerticalStackLayout>
                            </Frame>
                            <Frame BackgroundColor="#E8F5E8"
                            CornerRadius="15"
                            Padding="12"
                            WidthRequest="200"
                            HasShadow="True">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Amoxicilina 500mg"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="TailTruncation" />
                                    <Label Text="4 de Abril, 10:43 a. m."
                                    FontSize="12"
                                    TextColor="Gray" />
                                    <Label Text="Pharma XYZ"
                                    FontSize="11"
                                    TextColor="#666"
                                    LineBreakMode="TailTruncation" />
                                </VerticalStackLayout>
                            </Frame>
                        </StackLayout>
                    </ScrollView>

                    <Frame BackgroundColor="#F8F9FA" 
                    CornerRadius="15" 
                    Padding="20"
                    HasShadow="False"
                    IsVisible="{Binding HayEscaneos, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                            Text="&#xe8b6;"
                            FontSize="30"
                            TextColor="#cccccc"
                            HorizontalTextAlignment="Center" />
                            <Label Text="No hay escaneos recientes"
                            TextColor="Gray"
                            FontSize="14"
                            HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 4. H츼BITOS SALUDABLES -->
                <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                        <Label Grid.Column="0"
                                Text="H치bitos saludables"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                    </Grid>

                    <ScrollView
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        IsVisible="{Binding HayHabitos}">

                        <FlexLayout
                            Direction="Row"
                            Wrap="NoWrap"
                            AlignItems="Stretch"
                            JustifyContent="Start"
                            Padding="0,5"
                            BindableLayout.ItemsSource="{Binding HabitosSaludables}">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        BackgroundColor="White"
                                        CornerRadius="15"
                                        Padding="15"
                                        HasShadow="True"
                                        WidthRequest="280"
                                        VerticalOptions="Fill"
                                        Margin="0,0,8,0">

                                        <!-- 칈cono y descripci칩n a la par -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="4">
                                            <Label
                                                Grid.Column="0"
                                                FontFamily="MaterialIcons"
                                                Text="&#xEB4C;"
                                                FontSize="20"
                                                TextColor="Green"
                                                VerticalOptions="Start" />

                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding Descripcion}"
                                                FontSize="12"
                                                TextColor="Gray"
                                                LineBreakMode="WordWrap"
                                                MaxLines="0"
                                                Padding="5,0,0,0"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </FlexLayout>
                    </ScrollView>


                    <Frame BackgroundColor="#F8F9FA" 
                            CornerRadius="15" 
                            Padding="20"
                            HasShadow="False"
                            IsVisible="{Binding HayHabitos, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                                    Text="&#xE87C;"
                                    FontSize="30"
                                    TextColor="#cccccc"
                                    HorizontalTextAlignment="Center" />
                            <Label Text="No hay h치bitos disponibles"
                                    TextColor="Gray"
                                    FontSize="14"
                                    HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 5. RECOMENDACIONES IA (DISE칌O ESTANDARIZADO) -->
                <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                        <Label Grid.Column="0"
                            Text="Recomendaciones"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />
                    </Grid>

                    <ScrollView
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        IsVisible="{Binding HayRecomendaciones}">

                        <!-- FlexLayout recibe el ItemsSource y el ItemTemplate -->
                        <FlexLayout
                            Direction="Row"
                            Wrap="NoWrap"
                            AlignItems="Stretch"           
                            JustifyContent="Start"  
                            Padding="0,5"
                            BindableLayout.ItemsSource="{Binding Recomendaciones}">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        BackgroundColor="White"
                                        CornerRadius="15"
                                        Padding="15"
                                        HasShadow="True"
                                        WidthRequest="280"
                                        VerticalOptions="Fill"
                                        Margin="0,0,8,0" >
                                        <!-- se expande para igualar al mayor -->

                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="4">
                                            <Label
                                                Grid.Column="0"
                                                FontFamily="MaterialIcons"
                                                Text="&#xE90F;"
                                                TextColor="#FF9500"
                                                FontSize="20"
                                                VerticalOptions="Start" />

                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding Descripcion}"
                                                FontSize="12"
                                                LineBreakMode="WordWrap"
                                                MaxLines="0"
                                                Padding="5,0,0,0"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </ScrollView>

                    <Frame BackgroundColor="#F8F9FA"
                            CornerRadius="15"
                            Padding="20"
                            IsVisible="{Binding HayRecomendaciones, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                                    Text="&#xe8b6;"     
                                    FontSize="30"
                                    TextColor="#cccccc"
                                    HorizontalTextAlignment="Center" />
                            <Label Text="No hay recomendaciones disponibles"
                                    FontSize="14"
                                    TextColor="Gray"
                                    HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 6. INTERACCIONES-->
                <VerticalStackLayout Spacing="10"
                            IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                        <Label Grid.Column="0"
                            Text="Interacciones"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />
                    </Grid>

                    <ScrollView
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        IsVisible="{Binding HayInteracciones}">

                        <FlexLayout
                            Direction="Row"
                            Wrap="NoWrap"
                            AlignItems="Stretch"
                            JustifyContent="Start"
                            Padding="0,5"
                            BindableLayout.ItemsSource="{Binding Interacciones}">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                                        BackgroundColor="White"
                                        CornerRadius="15"
                                        Padding="15"
                                        HasShadow="True"
                                        WidthRequest="280"
                                        VerticalOptions="Fill"
                                        Margin="0,0,8,0">

                                        <!-- Icono + Descripci칩n -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="4">
                                            <Label
                                                Grid.Column="0"
                                                FontFamily="MaterialIcons"
                                                Text="&#xE915;"
                                                FontSize="20"
                                                TextColor="Blue"                                              
                                                VerticalOptions="Start" />

                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding Descripcion}"
                                                FontSize="12"
                                                TextColor="Gray"
                                                LineBreakMode="WordWrap"
                                                MaxLines="0"
                                                Padding="5,0,0,0"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </ScrollView>


                    <Frame BackgroundColor="#F8F9FA"
                            CornerRadius="15"
                            Padding="20"
                            HasShadow="False"
                            IsVisible="{Binding HayInteracciones, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                                Text="&#xe5c8;"
                                FontSize="30"
                                TextColor="#cccccc"
                                HorizontalTextAlignment="Center" />
                            <Label Text="No se detectaron interacciones"
                                    FontSize="14"
                                    TextColor="Gray"
                                    HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- 7. ALERTAS DE SALUD (DISE칌O ESTANDARIZADO) -->
                <VerticalStackLayout Spacing="10"
                            IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                        <Label Grid.Column="0"
                            Text="Alertas de Salud"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />
                    </Grid>

                    <ScrollView
    Orientation="Horizontal"
    HorizontalScrollBarVisibility="Never"
    IsVisible="{Binding HayAlertas}">

                        <FlexLayout
        Direction="Row"
        Wrap="NoWrap"
        AlignItems="Stretch"
        JustifyContent="Start"
        Padding="0,5"
        BindableLayout.ItemsSource="{Binding Alertas}">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame
                    BackgroundColor="White"
                    CornerRadius="15"
                    Padding="15"
                    HasShadow="True"
                    WidthRequest="300"
                    VerticalOptions="Fill"
                    Margin="0,0,8,0">

                                        <VerticalStackLayout Spacing="8">
                                            <!-- T칤tulo con 칤cono -->
                                            <HorizontalStackLayout Spacing="8">
                                                <Label
                                FontFamily="MaterialIcons"
                                Text="&#xe001;"
                                FontSize="20"
                                TextColor="#F44336"
                                VerticalOptions="Start" />

                                                <Label
                                Text="{Binding Riesgo}"
                                FontAttributes="Bold"
                                FontSize="14"
                                TextColor="Black"
                                LineBreakMode="TailTruncation"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Start" />
                                            </HorizontalStackLayout>

                                            <!-- Causa -->
                                            <Label
                            Text="{Binding Causa}"
                            FontSize="12"
                            TextColor="Gray"
                            FontAttributes="Italic"
                            LineBreakMode="WordWrap"
                            MaxLines="0"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Start" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </ScrollView>


                    <Frame BackgroundColor="#F8F9FA"
                        CornerRadius="15"
                        Padding="20"
                        HasShadow="False"
                        IsVisible="{Binding HayAlertas, Converter={StaticResource InverseBoolConverter}}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label FontFamily="MaterialIcons"
                                Text="&#xe001;" 
                                FontSize="30"
                                TextColor="#cccccc"
                                HorizontalTextAlignment="Center" />
                            <Label Text="No hay alertas de salud"
                                    FontSize="14"
                                    TextColor="Gray"
                                    HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
        <!-- Bot칩n flotante -->
        <vistas:BotonFlotanteEscaner />
    </Grid>
</base:BaseContentPage>