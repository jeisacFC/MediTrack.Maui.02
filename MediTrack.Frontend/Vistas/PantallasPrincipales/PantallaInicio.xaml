<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MediTrack.Frontend.ViewModels.PantallasPrincipales"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaInicio"
             x:Name="Pagina"
             BackgroundColor="White"
             Title="Inicio">

    <ContentPage.BindingContext>
        <vm:InicioViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Medicamentos para hoy - DISE칌O IGUAL QUE LA AGENDA -->
            <VerticalStackLayout Spacing="10">
                <!-- Header similar al de la agenda -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,5">
                    <Label Grid.Column="0"
                           Text="{Binding FechaHoy, StringFormat='Medicamentos - {0}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />

                    <!-- Bot칩n para ir a la agenda -->
                    <Button Grid.Column="1"
                            Text="Ver todo"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="10"
                            FontSize="12"
                            Padding="10,6"
                            WidthRequest="70"
                            HeightRequest="28"
                            Command="{Binding IrAAgendaCommand}" />
                </Grid>

                <!-- Lista de medicamentos CON MISMO DISE칌O QUE AGENDA -->
                <CollectionView ItemsSource="{Binding MedicamentosHoy}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Spacing="8" Padding="15">
                                <Label FontFamily="MaterialIcons"
                                       Text="&#xe1a3;"
                                       FontSize="40"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay medicamentos para hoy"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Padding="0"
                                   Margin="0,3"
                                   HasShadow="True"
                                   HeightRequest="75">
                                <Grid ColumnDefinitions="4,*,Auto" 
                                      Padding="0"
                                      HeightRequest="75">

                                    <!-- Barra de color lateral -->
                                    <BoxView Grid.Column="0"
                                             BackgroundColor="{Binding Color}" />

                                    <!-- Contenido del medicamento -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                       Padding="12"
                                                       Spacing="3"
                                                       VerticalOptions="Center">
                                        <Label Text="{Binding Titulo}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               LineBreakMode="TailTruncation" />

                                        <Label Text="{Binding Descripcion}"
                                               FontSize="13"
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation"
                                               IsVisible="{Binding Descripcion, Converter={StaticResource StringNotEmptyConverter}}" />

                                        <Label Text="{Binding HoraFormateada, StringFormat='游뎷 {0}'}"
                                               FontSize="12"
                                               TextColor="#007AFF" />
                                    </VerticalStackLayout>

                                    <!-- Estado del medicamento -->
                                    <Button Grid.Column="2"
                                            Text="{Binding Completado, Converter={StaticResource BoolToCheckConverter}}"
                                            BackgroundColor="{Binding Completado, Converter={StaticResource BoolToColorConverter}}"
                                            TextColor="White"
                                            CornerRadius="12"
                                            FontSize="11"
                                            Padding="8,4"
                                            Margin="10"
                                            WidthRequest="65"
                                            HeightRequest="28"
                                            VerticalOptions="Center"
                                            Command="{Binding BindingContext.MarcarTomadoCommand, Source={x:Reference Pagina}}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Escaneos recientes (DATOS HARDCODEADOS RESTAURADOS) -->
            <Label Text="Escaneos Recientes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Always"
                        HeightRequest="120">
                <HorizontalStackLayout Spacing="10" Padding="0,5">
                    <Frame BackgroundColor="#f1f4ff"
                           CornerRadius="15"
                           Padding="10"
                           WidthRequest="200"
                           HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="Divalproato S칩dico 250mg"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="5 de Abril, 7:23 p. m."
                                   FontSize="12"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame BackgroundColor="#f1f4ff"
                           CornerRadius="15"
                           Padding="10"
                           WidthRequest="200"
                           HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="Amoxicilina 500mg"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="4 de Abril, 10:43 a. m."
                                   FontSize="12"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- H치bitos saludables (RESTAURADOS) -->
            <Label Text="H치bitos saludables"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <ScrollView Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        HeightRequest="140">
                <HorizontalStackLayout Spacing="15" Padding="0,5">
                    <!-- H치bito de ejemplo: hidrataci칩n -->
                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           WidthRequest="280"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Beber al menos 8 vasos de agua al d칤a"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="Black" />
                            <Label Text="Mantenerte hidratado ayuda a tu organismo a funcionar mejor."
                                   FontSize="12"
                                   TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- H치bito de ejemplo: actividad f칤sica -->
                    <Frame BackgroundColor="White"
                           CornerRadius="15"
                           Padding="15"
                           WidthRequest="280"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Caminar 30 minutos diarios"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="Black" />
                            <Label Text="El ejercicio ligero mejora tu salud cardiovascular."
                                   FontSize="12"
                                   TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- S칤ntomas (RESTAURADOS) -->
            <Label Text="S칤ntomas"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Dolor de cabeza"
                        BackgroundColor="#e0e7ff"
                        TextColor="#3b71ff"
                        CornerRadius="20"
                        FontSize="12"/>
                <Button Text="Fiebre"
                        BackgroundColor="#e0e7ff"
                        TextColor="#3b71ff"
                        CornerRadius="20"
                        FontSize="12"/>
                <Button Text="N치useas"
                        BackgroundColor="#e0e7ff"
                        TextColor="#3b71ff"
                        CornerRadius="20"
                        FontSize="12"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>