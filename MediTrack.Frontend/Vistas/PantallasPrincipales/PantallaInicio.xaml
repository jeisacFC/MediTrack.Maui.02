<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaInicio"
             BackgroundColor="White"
             Title="Inicio">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Medicamentos para hoy -->
            <Label Text="Medicamentos para hoy"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <CollectionView ItemsSource="{Binding MedicamentosHoy}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#f1f4ff" CornerRadius="15" Padding="15" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                <Label Text="{Binding Hora}" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding Tomado, Converter={StaticResource TomadoEstadoConverter}}" 
                                       FontSize="12" 
                                       TextColor="{Binding Tomado, Converter={StaticResource TomadoColorConverter}}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Escaneos recientes -->
            <Label Text="Escaneos Recientes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="10"
                                       BindableLayout.ItemsSource="{Binding EscaneosRecientes}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#f1f4ff" CornerRadius="15" Padding="10">
                                <Label Text="{Binding}" FontSize="12" TextColor="Black"/>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Recomendaciones inteligentes -->
            <Label Text="Recomendaciones inteligentes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="10"
                                       BindableLayout.ItemsSource="{Binding Recomendaciones}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" CornerRadius="15" Padding="15" WidthRequest="280" HasShadow="True">
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="14" TextColor="Black" />
                                    <Label Text="{Binding Descripcion}" FontSize="12" TextColor="Gray" />
                                    <Button Text="Agregar a mi tratamiento"
                                            BackgroundColor="#3b71ff"
                                            TextColor="White"
                                            CornerRadius="15"
                                            HeightRequest="40"
                                            FontSize="12"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Síntomas -->
            <Label Text="Síntomas"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />

            <Button Text="Escanear Medicamento" Clicked="BotonEscanear_Clicked" />


            <HorizontalStackLayout Spacing="10"
                                   BindableLayout.ItemsSource="{Binding Sintomas}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Nombre}"
                                BackgroundColor="{Binding Seleccionado, Converter={StaticResource SintomaColorConverter}}"
                                TextColor="#3b71ff"
                                CornerRadius="20"
                                FontSize="12" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>