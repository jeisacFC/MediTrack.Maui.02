<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             xmlns:vistas="clr-namespace:MediTrack.Frontend.Vistas"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaAgenda"
             x:Name="CalendarioPage"
             BackgroundColor="#F2F2F7"
             Title="Agenda"
             BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:AgendaViewModel}}}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Convertidores -->
            <x:Converter x:TypeArguments="x:Boolean" x:Key="IntToBoolConverter">
                <x:Converter.Convert>
                    <x:Reference Name="IntToBoolConverterImpl" />
                </x:Converter.Convert>
            </x:Converter>
            <x:Converter x:TypeArguments="x:Boolean" x:Key="StringNotEmptyConverter">
                <x:Converter.Convert>
                    <x:Reference Name="StringNotEmptyConverterImpl" />
                </x:Converter.Convert>
            </x:Converter>
            <x:Converter x:TypeArguments="x:String" x:Key="BoolToCheckConverter">
                <x:Converter.Convert>
                    <x:Reference Name="BoolToCheckConverterImpl" />
                </x:Converter.Convert>
            </x:Converter>
            <x:Converter x:TypeArguments="Color" x:Key="BoolToColorConverter">
                <x:Converter.Convert>
                    <x:Reference Name="BoolToColorConverterImpl" />
                </x:Converter.Convert>
            </x:Converter>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Contenedor azul estilo iOS -->
        <Frame Grid.Row="0"
               BackgroundColor="#6084F2"
               CornerRadius="20"
               HasShadow="True"
               Margin="20,10,20,0"
               Padding="20">
            <VerticalStackLayout Spacing="10">
                <!-- Header personalizado del calendario -->
                <Grid ColumnDefinitions="Auto,*,Auto" HeightRequest="50">
                    <Button Grid.Column="0"
                            Text=""
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Command="{Binding NavegarMesCommand}"
                            CommandParameter="anterior" />
                    <Label Grid.Column="1"
                           Text="{Binding MesActual}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                    <Button Grid.Column="2"
                            Text=""
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Command="{Binding NavegarMesCommand}"
                            CommandParameter="siguiente" />
                </Grid>
                <!-- Calendario Syncfusion -->
                <calendar:SfCalendar x:Name="CalendarioSync"
                                   View="Month"
                                   SelectedDate="{Binding FechaSeleccionada, Mode=TwoWay}"
                                   HeightRequest="300"
                                   BackgroundColor="Transparent"
                                   SelectionBackground="#435CA9"
                                   TodayHighlightBrush="#435CA9">
                    <calendar:SfCalendar.HeaderView>
                        <calendar:CalendarHeaderView Height="0" Background="Transparent" />
                    </calendar:SfCalendar.HeaderView>
                    <calendar:SfCalendar.MonthView>
                        <calendar:CalendarMonthView Background="Transparent">
                            <calendar:CalendarMonthView.TextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" />
                            </calendar:CalendarMonthView.TextStyle>
                            <calendar:CalendarMonthView.DisabledDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#80FFFFFF" FontSize="16" />
                            </calendar:CalendarMonthView.DisabledDatesTextStyle>
                            <calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#60FFFFFF" FontSize="14" />
                            </calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>
                            <calendar:CalendarMonthView.TodayBackground>Transparent</calendar:CalendarMonthView.TodayBackground>
                            <calendar:CalendarMonthView.TodayTextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" FontAttributes="Bold" />
                            </calendar:CalendarMonthView.TodayTextStyle>
                        </calendar:CalendarMonthView>
                    </calendar:SfCalendar.MonthView>
                    <calendar:SfCalendar.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="SyncfusionCalendarSelectionBackground" Color="#87CEEB" />
                            <SolidColorBrush x:Key="CalendarSelectionBackground" Color="#87CEEB" />
                            <SolidColorBrush x:Key="SelectionBackground" Color="#87CEEB" />
                            <Style x:Key="CalendarViewHeaderTextStyle" TargetType="Label">
                                <Setter Property="TextColor" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontAttributes" Value="Bold" />
                            </Style>
                        </ResourceDictionary>
                    </calendar:SfCalendar.Resources>
                </calendar:SfCalendar>
            </VerticalStackLayout>
        </Frame>
        <!-- Lista de eventos -->
        <ScrollView Grid.Row="1" Margin="20,10,20,20">
            <VerticalStackLayout Spacing="15">
                <!-- Header de eventos con estadísticas y botones -->
                <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,10" RowDefinitions="Auto,Auto">
                    <Label Grid.Column="0" Grid.Row="0"
                           Text="{Binding FechaFormateada, StringFormat='Eventos - {0}'}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />
                    <Label Grid.Column="0" Grid.Row="1"
                           Text="{Binding EstadisticasTexto}"
                           FontSize="12"
                           TextColor="Gray"
                           VerticalTextAlignment="Center"
                           Margin="0,2,0,0" />
                    <Button Grid.Column="1" Grid.RowSpan="2"
                            Text=""
                            FontFamily="MaterialIcons"
                            Command="{Binding MostrarEstadisticasCommand}"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="16"
                            WidthRequest="40"
                            HeightRequest="36"
                            Margin="5,0" />
                    <Button Grid.Column="2" Grid.RowSpan="2"
                            Text="+ Evento"
                            BackgroundColor="#34C759"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="14"
                            FontAttributes="Bold"
                            Padding="15,8"
                            WidthRequest="100"
                            HeightRequest="36"
                            Command="{Binding AgregarEventoCommand}" />
                </Grid>
                <!-- Botones de acción rápida -->
                <HorizontalStackLayout Spacing="10"
                                     IsVisible="{Binding TotalEventos, Converter={StaticResource IntToBoolConverter}}"
                                     Margin="0,0,0,10">
                    <Button Text="Limpiar Tomados"
                            Command="{Binding LimpiarCompletadosCommand}"
                            BackgroundColor="#FF9500"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="12"
                            Padding="10,6"
                            IsVisible="{Binding EventosCompletados, Converter={StaticResource IntToBoolConverter}}" />
                </HorizontalStackLayout>
                <!-- Lista de eventos -->
                <CollectionView ItemsSource="{Binding EventosDelDia}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Spacing="8" Padding="15">
                                <Label FontFamily="MaterialIcons"
                                       Text=""
                                       FontSize="40"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay eventos para este día"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="Presiona '+ Evento' para agregar uno"
                                       TextColor="Gray"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"
                                       Opacity="0.7" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Padding="0"
                                   Margin="0,3"
                                   HasShadow="True"
                                   HeightRequest="75">
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Editar"
                                                       BackgroundColor="#007AFF"
                                                       Command="{Binding Source={x:Reference CalendarioPage}, Path=BindingContext.EditarEventoCommand}"
                                                       CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Eliminar"
                                                       BackgroundColor="#FF3B30"
                                                       Command="{Binding Source={x:Reference CalendarioPage}, Path=BindingContext.EliminarEventoCommand}"
                                                       CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Grid ColumnDefinitions="4,*,Auto,Auto"
                                          Padding="0"
                                          HeightRequest="75">
                                        <BoxView Grid.Column="0"
                                                 BackgroundColor="{Binding Color}" />
                                        <VerticalStackLayout Grid.Column="1"
                                                           Padding="12"
                                                           Spacing="3"
                                                           VerticalOptions="Center">
                                            <Label Text="{Binding TituloCompleto}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"
                                                   LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding DescripcionCompleta}"
                                                   FontSize="13"
                                                   TextColor="Gray"
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding Descripcion, Converter={StaticResource StringNotEmptyConverter}}" />
                                            <HorizontalStackLayout Spacing="4">
                                                <Label Text=""
                                                       FontFamily="MaterialIcons"
                                                       FontSize="12"
                                                       TextColor="#007AFF"
                                                       VerticalOptions="Center" />
                                                <Label Text="{Binding HoraFormateada}"
                                                       FontSize="12"
                                                       TextColor="#007AFF"
                                                       VerticalOptions="Center" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        <Button Grid.Column="2"
                                                Text="{Binding Completado, Converter={StaticResource BoolToCheckConverter}}"
                                                BackgroundColor="{Binding Completado, Converter={StaticResource BoolToColorConverter}}"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontSize="11"
                                                Padding="8,4"
                                                Margin="5"
                                                WidthRequest="65"
                                                HeightRequest="28"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={x:Reference CalendarioPage}, Path=BindingContext.MarcarCompletadoCommand}"
                                                CommandParameter="{Binding .}" />
                                        <Button Grid.Column="3"
                                                Text=""
                                                FontFamily="MaterialIcons"
                                                BackgroundColor="#FF3B30"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontSize="12"
                                                Padding="6,4"
                                                Margin="5"
                                                WidthRequest="35"
                                                HeightRequest="28"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={x:Reference CalendarioPage}, Path=BindingContext.EliminarEventoCommand}"
                                                CommandParameter="{Binding .}" />
                                    </Grid>
                                </SwipeView>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <!-- Botón flotante -->
        <vistas:BotonFlotanteEscaner Grid.Row="2" />
    </Grid>
</ContentPage>