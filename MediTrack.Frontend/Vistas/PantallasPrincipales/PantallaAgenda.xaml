<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaAgenda"
             x:Name="CalendarioPage"
             BackgroundColor="#F2F2F7"
             Title="Agenda">

    <Grid RowDefinitions="Auto,*">

        <!-- Contenedor azul estilo iOS -->
        <Frame Grid.Row="0" 
               BackgroundColor="#007AFF" 
               CornerRadius="20" 
               HasShadow="True" 
               Margin="20,10,20,0"
               Padding="20">

            <VerticalStackLayout Spacing="10">

                <!-- Header personalizado del calendario -->
                <Grid ColumnDefinitions="Auto,*,Auto" HeightRequest="50">
                    <Button Grid.Column="0"
                            Text="&#xe5cb;"
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Clicked="AnteriorMes" />

                    <Label Grid.Column="1"
                           Text="{Binding MesActual}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />

                    <Button Grid.Column="2"
                            Text="&#xe5cc;"
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Clicked="SiguienteMes" />
                </Grid>

                <!-- Calendario Syncfusion -->
                <calendar:SfCalendar x:Name="CalendarioSync"
                                   View="Month"
                                   SelectedDate="{Binding FechaSeleccionada}"
                                   HeightRequest="300"
                                   BackgroundColor="Transparent"
                                   SelectionChanged="OnCalendarSelectionChanged">

                    <!-- Ocultar header del calendario -->
                    <calendar:SfCalendar.HeaderView>
                        <calendar:CalendarHeaderView Height="0" Background="Transparent" />
                    </calendar:SfCalendar.HeaderView>

                    <!-- Vista del mes -->
                    <calendar:SfCalendar.MonthView>
                        <calendar:CalendarMonthView Background="Transparent">
                            <calendar:CalendarMonthView.TextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" />
                            </calendar:CalendarMonthView.TextStyle>

                            <calendar:CalendarMonthView.DisabledDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#80FFFFFF" FontSize="16" />
                            </calendar:CalendarMonthView.DisabledDatesTextStyle>

                            <calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#60FFFFFF" FontSize="14" />
                            </calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>

                            <calendar:CalendarMonthView.TodayBackground>Transparent</calendar:CalendarMonthView.TodayBackground>

                            <calendar:CalendarMonthView.TodayTextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" FontAttributes="Bold" />
                            </calendar:CalendarMonthView.TodayTextStyle>
                        </calendar:CalendarMonthView>
                    </calendar:SfCalendar.MonthView>

                </calendar:SfCalendar>

            </VerticalStackLayout>
        </Frame>

        <!-- Lista de eventos -->
        <ScrollView Grid.Row="1" Margin="20,10,20,20">
            <VerticalStackLayout Spacing="15">

                <!-- Header de eventos con estadísticas y botones -->
                <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,10" RowDefinitions="Auto,Auto">

                    <!-- Título principal -->
                    <Label Grid.Column="0" Grid.Row="0"
                           Text="{Binding FechaFormateada, StringFormat='Eventos - {0}'}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />

                    <!-- Estadísticas -->
                    <Label Grid.Column="0" Grid.Row="1"
                           Text="{Binding EstadisticasTexto}"
                           FontSize="12"
                           TextColor="Gray"
                           VerticalTextAlignment="Center"
                           Margin="0,2,0,0" />

                    <!-- Botón Estadísticas -->
                    <Button Grid.Column="1" Grid.RowSpan="2"
                            Text="&#xe6e1;"
                            FontFamily="MaterialIcons"
                            Command="{Binding MostrarEstadisticasCommand}"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="16"
                            WidthRequest="40"
                            HeightRequest="36"
                            Margin="5,0" />

                    <!-- Botón Agregar Evento -->
                    <Button Grid.Column="2" Grid.RowSpan="2"
                            Text="+ Evento"
                            BackgroundColor="#34C759"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="14"
                            FontAttributes="Bold"
                            Padding="15,8"
                            WidthRequest="100"
                            HeightRequest="36"
                            Command="{Binding AgregarEventoCommand}" />
                </Grid>

                <!-- Botón recargar (visible durante desarrollo) -->
                <Button Text="Recargar Eventos"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="12"
                        FontSize="14"
                        Margin="0,0,0,10"
                        Command="{Binding RecargarEventosCommand}"
                        IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#xe5d5;" FontFamily="MaterialIcons" Size="16" Color="White" />
                    </Button.ImageSource>
                </Button>

                <!-- Indicador de carga -->
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                                  IsRunning="{Binding IsLoading}"
                                  Color="#007AFF"
                                  HeightRequest="40"
                                  Margin="0,10" />

                <!-- Lista de eventos del backend -->
                <CollectionView ItemsSource="{Binding EventosDelDia}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Spacing="8" Padding="15">
                                <Label FontFamily="MaterialIcons"
                                       Text="&#xe878;"
                                       FontSize="40"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay eventos para este día"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="Presiona '+ Evento' para agregar uno"
                                       TextColor="Gray"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"
                                       Opacity="0.7" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Padding="0"
                                   Margin="0,3"
                                   HasShadow="True"
                                   HeightRequest="80">

                                <!-- Swipe para editar -->
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Editar"
                                                      BackgroundColor="#007AFF"
                                                      Command="{Binding BindingContext.EditarEventoCommand, Source={x:Reference CalendarioPage}}"
                                                      CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>

                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Eliminar"
                                                      BackgroundColor="#FF3B30"
                                                      Command="{Binding BindingContext.EliminarEventoCommand, Source={x:Reference CalendarioPage}}"
                                                      CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>

                                    <!-- Contenido del evento -->
                                    <Grid ColumnDefinitions="4,*,Auto" 
                                          Padding="0"
                                          HeightRequest="80">

                                        <!-- Barra de color lateral basada en tipo -->
                                        <BoxView Grid.Column="0">
                                            <BoxView.BackgroundColor>
                                                <MultiBinding Converter="{StaticResource TipoEventoToColorConverter}">
                                                    <Binding Path="Tipo" />
                                                </MultiBinding>
                                            </BoxView.BackgroundColor>
                                        </BoxView>

                                        <!-- Contenido del evento -->
                                        <VerticalStackLayout Grid.Column="1" 
                                                           Padding="15"
                                                           Spacing="4"
                                                           VerticalOptions="Center">
                                            <!-- Título del evento -->
                                            <Label Text="{Binding Titulo}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"
                                                   LineBreakMode="TailTruncation" />

                                            <!-- Descripción del evento -->
                                            <Label Text="{Binding Descripcion}"
                                                   FontSize="13"
                                                   TextColor="Gray"
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding Descripcion, Converter={StaticResource StringNotEmptyConverter}}" />

                                            <!-- Información de hora y tipo -->
                                            <HorizontalStackLayout Spacing="8">
                                                <!-- Hora -->
                                                <HorizontalStackLayout Spacing="4">
                                                    <Label Text="&#xe8b5;"
                                                           FontFamily="MaterialIcons"
                                                           FontSize="12"
                                                           TextColor="#007AFF"
                                                           VerticalOptions="Center" />
                                                    <Label Text="{Binding FechaHora, StringFormat='{0:HH:mm}'}"
                                                           FontSize="12"
                                                           TextColor="#007AFF"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>

                                                <!-- Separador -->
                                                <Label Text="•"
                                                       FontSize="12"
                                                       TextColor="Gray"
                                                       VerticalOptions="Center" />

                                                <!-- Tipo -->
                                                <HorizontalStackLayout Spacing="4">
                                                    <Label Text="&#xe892;"
                                                           FontFamily="MaterialIcons"
                                                           FontSize="12"
                                                           TextColor="Gray"
                                                           VerticalOptions="Center" />
                                                    <Label Text="{Binding Tipo}"
                                                           FontSize="12"
                                                           TextColor="Gray"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <!-- Botón de estado (temporal) -->
                                        <Button Grid.Column="2"
                                                BackgroundColor="#4CAF50"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontSize="16"
                                                Padding="8,4"
                                                Margin="10"
                                                WidthRequest="40"
                                                HeightRequest="32"
                                                VerticalOptions="Center"
                                                Command="{Binding BindingContext.MarcarCompletadoCommand, Source={x:Reference CalendarioPage}}"
                                                CommandParameter="{Binding .}">
                                            <Button.ImageSource>
                                                <FontImageSource Glyph="&#xe86c;" FontFamily="MaterialIcons" Size="16" Color="White" />
                                            </Button.ImageSource>
                                        </Button>
                                    </Grid>
                                </SwipeView>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>