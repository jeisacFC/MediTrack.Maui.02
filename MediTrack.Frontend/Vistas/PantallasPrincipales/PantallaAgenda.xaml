<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaAgenda"
             BackgroundColor="White"
             Title="Agenda">

    <Grid RowDefinitions="*,Auto">
        <!-- scroll arriba, botón flotante abajo -->

        <!-- Contenido con scroll -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- Encabezado -->
                <Frame BackgroundColor="#3b71ff" CornerRadius="30" HasShadow="False" Padding="20">
                    <VerticalStackLayout>
                        <Label Text="Agenda de hoy"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="{Binding FechaSeleccionada, StringFormat='Fecha: {0:dddd, dd MMMM yyyy}'}"
                               FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Lista de eventos -->
                <Label Text="Eventos del día"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black" />

                <CollectionView ItemsSource="{Binding EventosDelDia}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#f1f4ff"
                                   CornerRadius="15"
                                   Padding="15"
                                   Margin="0,5">
                                <Label Text="{Binding}" FontSize="14" TextColor="Black" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Botón flotante -->
        <Button Text="＋"
                FontSize="28"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="White"
                TextColor="#3b71ff"
                Grid.Row="1"
                HorizontalOptions="Center"
                Margin="0,0,0,20"
                Clicked="AgregarEvento_Clicked" />
    </Grid>
</ContentPage>