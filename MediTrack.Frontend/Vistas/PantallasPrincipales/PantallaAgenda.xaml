<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             xmlns:vistas="clr-namespace:MediTrack.Frontend.Vistas"
             x:Class="MediTrack.Frontend.Vistas.PantallasPrincipales.PantallaAgenda"
             x:Name="CalendarioPage"
             BackgroundColor="#F2F2F7"
             Title="Agenda">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Contenedor azul estilo iOS -->
        <Frame Grid.Row="0" 
               BackgroundColor="#007AFF" 
               CornerRadius="20" 
               HasShadow="True" 
               Margin="20,10,20,0"
               Padding="20">

            <VerticalStackLayout Spacing="10">

                <!-- Header personalizado del calendario -->
                <Grid ColumnDefinitions="Auto,*,Auto" HeightRequest="50">
                    <Button Grid.Column="0"
                            Text="&#xe5cb;"
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Clicked="AnteriorMes" />

                    <Label Grid.Column="1"
                           Text="{Binding MesActual}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />

                    <Button Grid.Column="2"
                            Text="&#xe5cc;"
                            FontFamily="MaterialIcons"
                            FontSize="28"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            WidthRequest="40"
                            Clicked="SiguienteMes" />
                </Grid>

                <!-- Calendario Syncfusion con ESTILOS APLICADOS -->
                <calendar:SfCalendar x:Name="CalendarioSync"
                                   View="Month"
                                   SelectedDate="{Binding FechaSeleccionada}"
                                   HeightRequest="300"
                                   BackgroundColor="Transparent"
                                   SelectionChanged="OnCalendarSelectionChanged">

                    <!-- Ocultar SOLO el header -->
                    <calendar:SfCalendar.HeaderView>
                        <calendar:CalendarHeaderView Height="0" Background="Transparent" />
                    </calendar:SfCalendar.HeaderView>

                    <!-- Vista del mes con RECURSOS DE ESTILO -->
                    <calendar:SfCalendar.MonthView>
                        <calendar:CalendarMonthView Background="Transparent">
                            <!-- Intentar configurar TextStyle -->
                            <calendar:CalendarMonthView.TextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" />
                            </calendar:CalendarMonthView.TextStyle>

                            <!-- Días deshabilitados -->
                            <calendar:CalendarMonthView.DisabledDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#80FFFFFF" FontSize="16" />
                            </calendar:CalendarMonthView.DisabledDatesTextStyle>

                            <!-- Días de otros meses -->
                            <calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>
                                <calendar:CalendarTextStyle TextColor="#60FFFFFF" FontSize="14" />
                            </calendar:CalendarMonthView.TrailingLeadingDatesTextStyle>

                            <!-- Día actual SIN fondo -->
                            <calendar:CalendarMonthView.TodayBackground>Transparent</calendar:CalendarMonthView.TodayBackground>

                            <!-- Texto del día actual -->
                            <calendar:CalendarMonthView.TodayTextStyle>
                                <calendar:CalendarTextStyle TextColor="White" FontSize="16" FontAttributes="Bold" />
                            </calendar:CalendarMonthView.TodayTextStyle>
                        </calendar:CalendarMonthView>
                    </calendar:SfCalendar.MonthView>

                    <!-- ✅ INTENTAR CONFIGURAR ESTILOS GLOBALES EN EL CALENDARIO -->
                    <calendar:SfCalendar.Resources>
                        <ResourceDictionary>
                            <!-- Estilo para el círculo de selección -->
                            <SolidColorBrush x:Key="SyncfusionCalendarSelectionBackground" Color="#87CEEB" />
                            <SolidColorBrush x:Key="CalendarSelectionBackground" Color="#87CEEB" />
                            <SolidColorBrush x:Key="SelectionBackground" Color="#87CEEB" />

                            <!-- Estilos de texto para días de semana -->
                            <Style x:Key="CalendarViewHeaderTextStyle" TargetType="Label">
                                <Setter Property="TextColor" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontAttributes" Value="Bold" />
                            </Style>
                        </ResourceDictionary>
                    </calendar:SfCalendar.Resources>

                </calendar:SfCalendar>

            </VerticalStackLayout>
        </Frame>

        <!-- Lista de eventos -->
        <ScrollView Grid.Row="1" Margin="20,10,20,20">
            <VerticalStackLayout Spacing="15">

                <!-- Header de eventos con ESTADÍSTICAS Y BOTONES -->
                <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,10" RowDefinitions="Auto,Auto">

                    <!-- Título principal -->
                    <Label Grid.Column="0" Grid.Row="0"
                           Text="{Binding FechaFormateada, StringFormat='Eventos - {0}'}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />

                    <!-- Estadísticas -->
                    <Label Grid.Column="0" Grid.Row="1"
                           Text="{Binding EstadisticasTexto}"
                           FontSize="12"
                           TextColor="Gray"
                           VerticalTextAlignment="Center"
                           Margin="0,2,0,0" />

                    <!-- Botón Estadísticas -->
                    <Button Grid.Column="1" Grid.RowSpan="2"
                            Text="&#xe6e1;"
                            FontFamily="MaterialIcons"
                            Command="{Binding MostrarEstadisticasCommand}"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="16"
                            WidthRequest="40"
                            HeightRequest="36"
                            Margin="5,0" />

                    <!-- Botón Agregar Evento -->
                    <Button Grid.Column="2" Grid.RowSpan="2"
                            Text="+ Evento"
                            BackgroundColor="#34C759"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="14"
                            FontAttributes="Bold"
                            Padding="15,8"
                            WidthRequest="100"
                            HeightRequest="36"
                            Command="{Binding AgregarEventoCommand}" />
                </Grid>

                <!-- Botones de acción rápida (solo si hay eventos) -->
                <HorizontalStackLayout Spacing="10" 
                                     IsVisible="{Binding TotalEventos, Converter={StaticResource IntToBoolConverter}}"
                                     Margin="0,0,0,10">

                    <Button Text="Limpiar Tomados"
                        Command="{Binding LimpiarCompletadosCommand}"
                        BackgroundColor="#FF9500"
                        TextColor="White"
                        CornerRadius="12"
                        FontSize="12"
                        Padding="10,6"
                        IsVisible="{Binding EventosCompletados, Converter={StaticResource IntToBoolConverter}}" />

                </HorizontalStackLayout>

                <!-- Lista de eventos CON BOTÓN ELIMINAR -->
                <CollectionView ItemsSource="{Binding EventosDelDia}">
                    <CollectionView.EmptyView>
                        <ContentView>
                            <VerticalStackLayout Spacing="8" Padding="15">
                                <Label FontFamily="MaterialIcons"
                                       Text="&#xe878;"
                                       FontSize="40"
                                       TextColor="#cccccc"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="No hay eventos para este día"
                                       TextColor="Gray"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center" />
                                <Label Text="Presiona '+ Evento' para agregar uno"
                                       TextColor="Gray"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"
                                       Opacity="0.7" />
                            </VerticalStackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="10"
                                   Padding="0"
                                   Margin="0,3"
                                   HasShadow="True"
                                   HeightRequest="75">

                                <!-- Swipe para editar -->
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Editar"
                                                      BackgroundColor="#007AFF"
                                                      Command="{Binding BindingContext.EditarEventoCommand, Source={x:Reference CalendarioPage}}"
                                                      CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>

                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Eliminar"
                                                      BackgroundColor="#FF3B30"
                                                      Command="{Binding BindingContext.EliminarEventoCommand, Source={x:Reference CalendarioPage}}"
                                                      CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>

                                    <!-- Contenido del evento -->
                                    <Grid ColumnDefinitions="4,*,Auto,Auto" 
                                          Padding="0"
                                          HeightRequest="75">

                                        <!-- Barra de color lateral -->
                                        <BoxView Grid.Column="0"
                                                 BackgroundColor="{Binding Color}" />

                                        <!-- Contenido del evento -->
                                        <VerticalStackLayout Grid.Column="1" 
                                                           Padding="12"
                                                           Spacing="3"
                                                           VerticalOptions="Center">
                                            <Label Text="{Binding Titulo}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"
                                                   LineBreakMode="TailTruncation" />

                                            <Label Text="{Binding Descripcion}"
                                                   FontSize="13"
                                                   TextColor="Gray"
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding Descripcion, Converter={StaticResource StringNotEmptyConverter}}" />

                                            <HorizontalStackLayout Spacing="4">
                                                <Label Text="&#xe8b5;"
                                                       FontFamily="MaterialIcons"
                                                       FontSize="12"
                                                       TextColor="#007AFF"
                                                       VerticalOptions="Center" />
                                                <Label Text="{Binding HoraFormateada}"
                                                       FontSize="12"
                                                       TextColor="#007AFF"
                                                       VerticalOptions="Center" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <!-- Botón de estado -->
                                        <Button Grid.Column="2"
                                                Text="{Binding Completado, Converter={StaticResource BoolToCheckConverter}}"
                                                BackgroundColor="{Binding Completado, Converter={StaticResource BoolToColorConverter}}"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontSize="11"
                                                Padding="8,4"
                                                Margin="5"
                                                WidthRequest="65"
                                                HeightRequest="28"
                                                VerticalOptions="Center"
                                                Command="{Binding BindingContext.MarcarCompletadoCommand, Source={x:Reference CalendarioPage}}"
                                                CommandParameter="{Binding .}" />

                                        <!-- Botón eliminar -->
                                        <Button Grid.Column="3"
                                                Text="&#xe872;"
                                                FontFamily="MaterialIcons"
                                                BackgroundColor="#FF3B30"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontSize="12"
                                                Padding="6,4"
                                                Margin="5"
                                                WidthRequest="35"
                                                HeightRequest="28"
                                                VerticalOptions="Center"
                                                Command="{Binding BindingContext.EliminarEventoCommand, Source={x:Reference CalendarioPage}}"
                                                CommandParameter="{Binding .}" />
                                    </Grid>
                                </SwipeView>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>



        <!-- Botón flotante -->
        <vistas:BotonFlotanteEscaner Grid.Row="2"  />

    </Grid>
    
    
</ContentPage>