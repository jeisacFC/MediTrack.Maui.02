<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediTrack.Frontend.Vistas.PantallaInicioSesion"
             BackgroundColor="#3b71ff"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Fondo con patrón -->
        <Image Source="logo_patron.png"
               Aspect="Fill"
               Opacity="0.4"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Título -->
                <Frame BackgroundColor="#4d82ff"
                       CornerRadius="20"
                       Padding="20"
                       HorizontalOptions="Center"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Iniciar Sesión"
                               FontSize="22"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />
                        <Label Text="Ingrese su correo electrónico y contraseña"
                               FontSize="14"
                               TextColor="White"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Formulario -->
                <Frame BackgroundColor="White"
                       CornerRadius="30"
                       Padding="25"
                       HasShadow="False"
                       Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="20">

                        <!-- Correo -->
                        <VerticalStackLayout>
                            <Label Text="Correo Electrónico"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="Black" />
                            <Frame BackgroundColor="#F3F3F3"
                                   CornerRadius="15"
                                   Padding="0"
                                   HasShadow="False">
                                <Entry Placeholder="correo@ejemplo.com"
                                       BackgroundColor="Transparent"
                                       HeightRequest="45"
                                       Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Contraseña -->
                        <VerticalStackLayout>
                            <Label Text="Contraseña"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="Black" />
                            <Frame BackgroundColor="#F3F3F3"
                                   CornerRadius="15"
                                   Padding="0"
                                   HasShadow="False">
                                <Entry Placeholder="••••••••"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       HeightRequest="45"
                                       Margin="10,0"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Olvidó su contraseña -->
                        <Label Text="¿Olvidó su contraseña?"
                               FontSize="12"
                               TextColor="#3b71ff"
                               HorizontalTextAlignment="End" />

                        <!-- Botón -->
                        <Button Text="Iniciar Sesión"
                                BackgroundColor="#3b71ff"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontAttributes="Bold"
                                FontSize="16" />

                        <!-- Registro -->
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Label Text="¿Aún no tiene cuenta? " FontSize="12" />
                            <Label Text="Registrarse"
                                   FontSize="12"
                                   TextColor="#3b71ff"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="IrARegistro" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
