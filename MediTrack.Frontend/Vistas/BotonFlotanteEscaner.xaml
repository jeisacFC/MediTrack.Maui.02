<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediTrack.Frontend.Vistas.BotonFlotanteEscaner"
             HorizontalOptions="End"
             VerticalOptions="End">

    <Button x:Name="FabButton"
            Text="&#xe8b4;"
            FontFamily="MaterialIcons"
            FontSize="30"
            TextColor="White"
            BackgroundColor="#004aad"
            WidthRequest="50"
            HeightRequest="50"
            CornerRadius="15"
            Margin="20"
            Clicked="OnFabClicked">
        <Button.Shadow>
            <Shadow Brush="Black"
                    Offset="0,5"
                    Radius="15"
                    Opacity="0.5" />
        </Button.Shadow>
    </Button>
</ContentView>